<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Chi tiết phân loại"
        android:textSize="24sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:text="Mã:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_detail_category_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/textView3"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textview6"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text="Tên:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_Name_DetailCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_detail_category_id"
        android:layout_toEndOf="@id/textview6"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/textview7"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:text="Mô tả:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_Des_DetailCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_Name_DetailCat"
        android:layout_toEndOf="@id/textview7"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <Button
        android:id="@+id/btn_save_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_Des_DetailCat"
        android:layout_marginTop="20dp"
        android:text="save category" />
</RelativeLayout>